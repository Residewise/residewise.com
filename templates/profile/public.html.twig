{% import "macro/user.macro.twig" as userMacro %}
{% import "macro/component.macro.twig" as component %}
{% import "macro/asset.macro.twig" as asset %}

{% extends 'base.html.twig' %}

{% block title %}{{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-4">
            <div class="col-md-3">
                <div class="mb-3">
                    {{ include('profile/_public-profile-sidebar.html.twig', {
                        user: user
                    }) }}
                </div>
                <button type="button" class="ms-1 btn btn-primary w-100" data-bs-toggle="modal"
                        data-bs-target="#rating-form">
                    {{ 'leave-review'|trans }}
                </button>
            </div>
            <div class="col-md-8">
                <ul class="nav nav-pills nav-fill mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pills-reviews-btn" data-bs-toggle="pill" data-bs-target="#pills-reviews" type="button" role="tab" aria-controls="pills-reviews" aria-selected="false">Reviews</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-properties-btn" data-bs-toggle="pill" data-bs-target="#pills-properties" type="button" role="tab" aria-controls="pills-properties" aria-selected="true">Properties</button>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-reviews" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
                        {% for review in user.reviews %}
                            {{ userMacro.reviewCard(review) }}
                        {% endfor %}
                    </div>
                    <div class="tab-pane fade" id="pills-properties" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
                        {% for asset in user.assets %}
                            {{ asset.card(asset) }}
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
    </div>

    {{ component.modal(
        'rating-form',
        'rating-form-frame',
        path('new_review', {id: user.id}),
        'new-review'|trans
    ) }}

{% endblock %}
