{% extends 'base.html.twig' %}

{% block title %}{{ app.user.fullName }}{% endblock %}

{% block body %}
    <turbo-frame id="dashboard-navbar" target="dashboard">
        <ul class="nav nav-pills nav-fill mb-3">
            <li class="nav-item">
                <a class="nav-link {% if app.request.attributes.get('_route') == 'user_account' %}active{% endif %}" href="{{ path('user_dashboard_assets') }}">
                    <i class="mdi mdi-home-group fs-3"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="{{ path('app_asset_new') }}">
                    <i class="mdi mdi-home-plus fs-3"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="mdi mdi-cog fs-3"></i>
                </a>
            </li>
        </ul>
    </turbo-frame>
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-50">
            <div class="col-md-12">
                <turbo-frame id="dashboard" src="{{ path('user_dashboard_assets') }}">
                    <div class="d-flex justify-content-center align-items-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </turbo-frame>
            </div>
        </div>
    </div>
{% endblock %}
