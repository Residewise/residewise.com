<div class="list-group list-group-flush">
    <a href="{{ path('user_public_profile', {id: user.id }) }}" class="list-group-item  list-group-item-action d-flex justify-content-between align-items-center">
        <img height="40" width="40" class="rounded-circle object-fit-cover" src="{{ user.avatar }}" alt="{{ user.fullName }}"/>
        <div>{{ user.fullName }} </div>
    </a>
    <div class="list-group-item">
        <turbo-frame id="avg-user-rating" src="{{ path('_user_avg_rating', {
            id: user.id
        }) }}">
            <div class="d-flex justify-content-center bg-white mb-3 py-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </turbo-frame>
    </div>
</div>
