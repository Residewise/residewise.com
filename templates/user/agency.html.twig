{% extends 'base.html.twig' %}

{% block title %}Agency{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                {{ include('/user/_account-menu.html.twig') }}
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4">
                        <img src="{{ app.user.agency.logo }}" class="w-100 rounded" />
                    </div>
                    <div class="col-md-8">
                        <turbo-frame id="agency-form-frame" src="{{ path('agency_edit') }}">
                            <div class="d-flex justify-content-center align-items-center min-vh-50">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </turbo-frame>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
