{% macro popovercard(user) %}
    <div class="card">
        <div class="card-body d-flex justify-content-between">
            <div>
                <img class="rounded-circle me-2" height="100" src="{{ user.avatar }}" alt="{{ user.fullName }}"/>
            </div>
            <div>
                <div class="h5 m-0">{{ user.fullName }}</div>
                {% for review in user.reviews %}
                    <div class="">
                        <i class="mdi mdi-star text-warning"></i>
                        <i class="mdi mdi-star text-warning"></i>
                        <i class="mdi mdi-star text-warning"></i>
                        <i class="mdi mdi-star-outline"></i>
                        <i class="mdi mdi-star-outline"></i>
                    </div> ({{ loop.count }})
                {% else %}
                    no reviews
                {% endfor %}
            </div>
        </div>
    </div>
{% endmacro %}

{% macro review(review) %}
    <div class="card">
        <div class="card-body">
            <i class="mdi mdi-star"></i>
        </div>
    </div>
{% endmacro %}
