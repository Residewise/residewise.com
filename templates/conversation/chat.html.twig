{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-md-4">
                <div class="mb-2">
                    <input type="text" class="form-control bg-white" placeholder="search">
                </div>
                <turbo-frame id="conversation_list" src="{{ path('conversation_list') }}" target="_top">
                    <div class="d-flex justify-content-center align-items-center min-vh-50">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </turbo-frame>
            </div>
            <div class="col-md-8">
                <turbo-frame id="active_conversation"
                             src="{{ path('load_conversation', {id: conversation.id }) }}" target="_top">
                    <div class="d-flex justify-content-center align-items-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </turbo-frame>
            </div>
        </div>
    </div>
{% endblock %}

